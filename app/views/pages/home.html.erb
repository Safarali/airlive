
<div class="wrapper">
	
	<div class="banner">
		
		 <h1>WELCOME HOME</h1>
	    <p>Rent unique places to stay from local hosts in 190+ countries.</p>
	    <%= link_to "How It Works", how_it_works_path, id: "btn_how_it_works", class: "btn btn-success btn-lg" %>

     <div class="search_panel">
     <div class="col-md-8 col-md-offset-2">
     <div class="panel-body home_search">
		<%= form_tag search_path, method: :get do %>
			<div class="row">
				<div class="col-md-6 col-md-offset-3 place_search">
					<%= text_field_tag :search, params[:search], placeholder: "Where do you want to go?", class: "form-control" %>
				</div>
			</div>

			<div class="row">
				<div class="col-md-3 col-xs-6 col-md-offset-3 in_out_search">
					<%= text_field_tag :start_date, params[:start_date], placeholder: "Check In", readonly: true,  class: "form-control" %>
				</div>
				<div class="col-md-3 col-xs-6">
					<%= text_field_tag :end_date, params[:end_date], placeholder: "Check Out", readonly: true, class: "form-control" %>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6 col-md-offset-3">
					<%= submit_tag "Search", class: "btn btn-primary" %>
				</div>
			</div>
		<% end %>

	</div>
	</div> 
	</div>

	</div>
</div>



	  <div class="row">
			<% @rooms.each do |room| %>
			  	<div class="col-md-3">
			  		<div class="panel panel-default">
			  			<div class="panel-heading preview">
			  				<%= image_tag room.photos[0].image.url(:medium) %>
			  			</div>
			  			<div class="panel-body">
			  				<%= link_to room.listing_name, room_path(room) %>
			  			</div>
			  		</div>
			  	</div>
			<% end %>
	  </div>	

	  <script>
	  $(function() {
	  	$("#start_date").datepicker({
		  	dateFormat: 'dd-mm-yy',
		  	minDate: 0,
		  	maxDate: '3m',
		  	onSelect: function(selected) {
		  		$('#end_date').datepicker("option", "minDate", selected);
		  		$('#end_date').attr('disabled', false);
	  	}
	  	});
	  	$("#end_date").datepicker({
		  	dateFormat: 'dd-mm-yy',
		  	minDate: 0,
		  	maxDate: '3m',
		  	onSelect: function(selected) {
		  		$('#start_date').datepicker("option", "maxDate", selected);
		  		
	  	}
	  	});
	  })

	  </script>

