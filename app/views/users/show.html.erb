<% provide(:title, @user.fullname) %>

<div class="panel-body space-maker">
  <div class="row">
	<div class="col-md-3">
	<% if @user.avatar.present? %>
	  <div class="center">
	  <%= image_tag @user.avatar.url, class: "avatar-full" %>
      <div class="row-space-1">
      <% if @user != current_user %>
	  		<%= link_to "Send Message", conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: 'post', class: "btn btn-primary" %> <% end %>
	  </div>
	  </div>
	  <% end %>
		<div class="panel panel-default profile">
		  <div class="user-show"><div class="panel-heading">Verification</div></div>
		    <div class="panel-body">
				<%= @user.email %><br>
				<%= @user.phone_number %>
		    </div>
		</div>	
	</div>
	  <div class="col-md-9">
		  <h2><%= @user.fullname %></h2>

		  <div class="description row-space-3">
		  <%= @user.description %>
		  </div>
		  <hr align="center" width="75%">

		  <h4> Spaces for Airlive (<%= @rooms.length %>)</h4><br>
		  <div class="row">

		  	<% @rooms.each do |room| %>
		  	<div class="col-md-4">
		  		<div class="panel panel-default">
		  			<div class="panel-heading preview">
		  				<%= image_tag room.photos[0].image.url(:medium) %>
		  			</div>
		  			<div class="panel-body">
		  				<%= link_to room.listing_name, room_path(room) %>
		  			</div>
		  		</div>
		  	</div>
		  	<% end %>
		  </div>
	  </div>
  </div>
 </div>


